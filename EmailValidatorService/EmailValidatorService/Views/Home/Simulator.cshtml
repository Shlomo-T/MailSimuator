    <h2 class="h2">Choose Enron employee:</h2>
    <div class="dropdownlist" ng-controller="MainCtrl">

        <select id="userSelector" ng-change="LoadUserData()" ng-model="selectedUser">
            <option ng-repeat="user in users"> {{user.Email}}</option>
        </select>

        <div class="container">{{selectedUser}}</div>

        <h3>Here you can see Incoming and Outgoing Email</h3>
        <button class="btn btn-primary btn-lg active" ng-click="ShowIncoming()">Incoming</button>
        <button class="btn btn-primary btn-lg active" ng-click="ShowOutgoing()">Outgoing</button>
        <p></p>

        <table class="table table-bordered table-condensed table-striped table-bordered table-hover no-margin" ng-show="selectedUser!=unmodified && showEmails">
            <thead>

                <tr>
                    <th>Date</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Body</th>
                    <th>Subject</th>
                </tr>
            </thead>
            <tbody>
                <tr id="{{mail._id}}" ng-repeat="mail in Emails" style="cursor: pointer" ng-click="GetOwner(mail)">
                    <td> {{mail.headers.Date}} </td>
                    <td> {{mail.headers.From}} </td>
                    <td> {{ShortValue(mail.headers.To)}} </td>
                    <td> {{ShortValue(mail.body)}} </td>
                    <td>
                        {{ShortValue(mail.headers.Subject)}}
                    </td>
                </tr>
            </tbody>
        </table>

        <div ng-show="!showEmails" ng-model="TestedEmail">
            <h2> See Matches: </h2>
            <div class="list-group">
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">Email ID:</h4>
                    <p class="list-group-item-text">{{TestedEmail._id}}</p>
                </a>
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">Subject:</h4>
                    <p class="list-group-item-text">{{TestedEmail.headers.Subject}}</p>
                </a>
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">Date:</h4>
                    <p class="list-group-item-text">
                        {{TestedEmail.headers.Date}}
                        </p>
                    </a>
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">From:</h4>
                    <p class="list-group-item-text">{{TestedEmail.headers.From}}</p>
                </a>
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">To:</h4>
                    <p class="list-group-item-text">{{TestedEmail.headers.To}}</p>
                </a>
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">Body:</h4>
                    <p class="list-group-item-text">{{TestedEmail.body}}</p>
                </a>


            </div>
        </div>
